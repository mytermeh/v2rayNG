<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:text="@string/menu_item_add_config"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color_light"
        android:layout_marginBottom="4dp" />

    <!-- Import from Clipboard (primary action, highlighted) -->
    <LinearLayout
        android:id="@+id/item_import_clipboard"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="#F5F5F5"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_copy"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_clipboard"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Scan QR Code -->
    <LinearLayout
        android:id="@+id/item_import_qrcode"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_scan_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_qrcode"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Import from File -->
    <LinearLayout
        android:id="@+id/item_import_local"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_file_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_local"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Divider before Manual section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color_light"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <!-- Manual Settings label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="@string/menu_item_import_config_manually_title"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:alpha="0.7" />

    <!-- VMess -->
    <LinearLayout
        android:id="@+id/item_manually_vmess"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_manually_vmess"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- VLESS -->
    <LinearLayout
        android:id="@+id/item_manually_vless"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_manually_vless"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Shadowsocks -->
    <LinearLayout
        android:id="@+id/item_manually_ss"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_manually_ss"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Trojan -->
    <LinearLayout
        android:id="@+id/item_manually_trojan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_manually_trojan"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Hysteria2 -->
    <LinearLayout
        android:id="@+id/item_manually_hysteria2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_manually_hysteria2"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Wireguard -->
    <LinearLayout
        android:id="@+id/item_manually_wireguard"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_manually_wireguard"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- SOCKS -->
    <LinearLayout
        android:id="@+id/item_manually_socks"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_manually_socks"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- HTTP -->
    <LinearLayout
        android:id="@+id/item_manually_http"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_manually_http"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Policy Group -->
    <LinearLayout
        android:id="@+id/item_manually_policy_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/menu_item_import_config_policy_group"
            android:textSize="14sp"
